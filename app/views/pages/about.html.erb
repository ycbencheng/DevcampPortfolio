<div class="app-card-container">
  <div class="card">
  <h1>About Me</h1>

  <hr>

  <div class="row">
    <div class="col-md-4">
      <%= image_tag "profile.jpg", width: 300, alt: "profile image" %>
    </div>

    <div class="col-md-8">
      <p> 
        <button 
          class="btn btn-primary"
          type="button"
          data-toggle="collapse"
          data-target="#jobHistory"
          aria-expanded="false"
          aria-controller="jobHistory"
        >
          Job History
          </button>

        <button 
          class="btn btn-primary"
          type="button"
          data-toggle="collapse"
          data-target="#education"
          aria-expanded="false"
          aria-controller="education"
        >
          Education
          </button>
      </p>

      <p>
        <div class="collapse" id="jobHistory">
          <div class="card car-block">
            Job 1
          </div>
          <div class="card car-block">
            Job 2
          </div>
        </div>

        <div class="collapse" id="education">
          <div class="card car-block">
            School 1
          </div>
          <div class="card car-block">
            School 2
          </div>
        </div>
      </p>
    </div>
  </div>
  </div>
</div>

